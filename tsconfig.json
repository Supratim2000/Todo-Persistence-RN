{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "jsx": "react-native",
    "strict": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["jest"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "Pods"]
}